<?php /** @var $this \MvcCore\View */ ?>
<h1><?php echo $this->Translate($this->document->Title); ?></h1>
<?php if ($this->questionnaires): ?>
	<p><?php echo $this->Translate($this->document->Description); ?></p>
	<div class="hr"></div>
	<?php foreach($this->questionnaires as $questionnaire): ?>
		<div>
			<h3>
				<a href="<?php echo $questionnaire->GetUrl(); ?>">
					<?php echo $questionnaire->Title; ?>
				</a>
			</h3>
			<p>
				<?php echo $questionnaire->Perex; ?>
			</p>
		</div>
	<?php endforeach; ?>
<?php else: ?>
	<p><b>No XML questionnaires defined in path: '<?php echo $this->$Path; ?>'.</b></p>
<?php endif; ?>